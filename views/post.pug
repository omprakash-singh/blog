doctype html
html(lang="en")
     head
          meta(charset="UTF-8")
          meta(http-equiv="X-UA-Compatible", content="IE=edge")
          meta(name="viewport", content="width=device-width, initial-scale=1.0")
          title || POST YOUR BLOG ||
          link(rel="stylesheet", href="bloguser.css")
     body 
     .post-container
         a(href="/" class="post-home-btn")  Home &rightarrow;
         .post-form--contain
             h1=UserNamedata.name 
             h3=UserNamedata.email
             form(action="/post", method="post") 
                 textarea(name="post", cols="30", rows="10") 
                 br
                 button( class='post-submit-btn' type="submit") POST
                 br
